@*<div class="container">*@
<div class="body-content">
    <!--begin inline add-->
    <div class="row">
        <div class="col-md-12">
            <h4>Available Kits</h4>
            <form class="form-inline">
                <div class="form-group">
                    <label for="addRecordItem1">Equipment Type</label>
                    @Html.DropDownList("eqpmtType", null, "Select Equipment Type", new { @id = "addRecordItem1", @name = "addRecordItem1", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="addRecordItem2">Kit ID</label>
                    @Html.DropDownList("kitID", null, "Select Kit ID", new { @id = "addRecordItem2", @name = "addRecordItem2", @class = "form-control" })
