                <button type="submit" class="btn btn-primary" id="addButton" style="background-color: royalblue">Add</button>
            </form><hr />
        </div>
    </div>
    <!--click event begin-->
    <div>
        <div class="row">
            <div class="col-md-1">ID: <input type="text" id="slctd_id" value="slctd_id"></div>
